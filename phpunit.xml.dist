<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals="false"
        bootstrap="vendor/autoload.php"
        colors="true"
        verbose="true">

    <testsuites>
        <testsuite name="Application Test Suite">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="KERNEL_CLASS" value="App\Kernel"/>
    </php>
</phpunit>
